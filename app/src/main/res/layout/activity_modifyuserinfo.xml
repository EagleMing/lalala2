<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shaper_modify_divider"
    android:showDividers="middle"
    android:padding="5dp">

    <ImageView
        android:id="@+id/modify_background_iv"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/background" />

    <LinearLayout
        android:id="@+id/modify_icon_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/icon_name"
            android:textSize="24sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/modify_icon_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/icon_name" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modify_nickname_layout"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:textSize="24sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/modify_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modify_email_layout"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textSize="24sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/modify_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modify_signature_layout"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/signature"
            android:textSize="24sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/modify_signature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"/>
    </LinearLayout>

</LinearLayout>